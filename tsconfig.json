{
  "extends": "@tsconfig/node22/tsconfig.json",
  "version": "5.6.3",
  "compilerOptions": {
    "lib": ["es2021"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "rootDir": "./src",
    "outDir": "./lib",
    "allowJs": true,
    "typeRoots": ["src/custom-types", "./node_modules/@types"]
  },
  "include": ["src/**/*.ts"],
  "ts-node": {
    "swc": true
  }
}
